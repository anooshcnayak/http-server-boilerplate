{
  "name": "api-server-boilerplate",
  "version": "1.0.0",
  "description": "HTTP Server boilerplate",
  "main": "src/index.ts",
  "scripts": {
    "clear": "rm -rf build/ coverage/ .nyc_output/",
    "clear:all": "rm -rf node_modules/ && npm run clear",
    "debug": "node --inspect-brk --require ts-node/register src/app.ts",
    "test": "mocha -r ts-node/register --exit test/mocha-global.ts test/**/*.ts",
    "coverage": "nyc npm run test && nyc report --reporter=html",
    "start": " ts-node src/index.ts",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/app.ts",
    "build": "./node_modules/.bin/tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@repo.gameskraft.in/tmp/api-server-boilerplate.git"
  },
  "keywords": [
    "http",
    "server",
    "express",
    "typescript"
  ],
  "author": "Anoosh",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/es6-promise": "^3.3.0",
    "@types/express": "^4.17.12",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "^8.0.3",
    "@types/sinon": "^9.0.5",
    "@types/sinon-chai": "^3.2.4",
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "prettier": "2.1.1",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@netflix/nerror": "^1.1.3",
    "@types/body-parser": "^1.19.0",
    "@types/cls-hooked": "^4.3.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/http-errors": "^1.8.0",
    "@types/jwt-decode": "^3.1.0",
    "@types/node": "^14.0.23",
    "@types/uuid": "^8.3.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cls-hooked": "^4.2.2",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "helmet": "^4.3.1",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mysql2": "^2.2.5",
    "node-cache": "^5.1.2",
    "pm2": "^4.5.1",
    "statsd-client": "^0.4.5",
    "uuid": "^8.3.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0",
    "winston-logrotate": "^1.3.0",
    "zookeeper-util": "^1.0.2"
  }
}
